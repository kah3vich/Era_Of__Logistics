                        input(name="code" type="text" maxlength="1")
                        input(name="code" type="text" maxlength="1")
                        input(name="code" type="text" maxlength="1")
                        input(name="code" type="text" maxlength="1")
                    button.reg__code-a 
                        p Подтвердить



